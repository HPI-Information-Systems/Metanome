<web-app>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>Metanome.html</welcome-file>
    </welcome-file-list>

    <!-- Servlets -->
    <servlet>
        <servlet-name>parameterServiceImpl</servlet-name>
        <servlet-class>de.uni_potsdam.hpi.metanome.frontend.server.ParameterServiceImpl
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>parameterServiceImpl</servlet-name>
        <url-pattern>/metanome/parameterService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>finderServiceImpl</servlet-name>
        <servlet-class>de.uni_potsdam.hpi.metanome.frontend.server.FinderServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>finderServiceImpl</servlet-name>
        <url-pattern>/metanome/finderService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>executionServiceImpl</servlet-name>
        <servlet-class>de.uni_potsdam.hpi.metanome.frontend.server.ExecutionServiceImpl
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>executionServiceImpl</servlet-name>
        <url-pattern>/metanome/executionService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>inputDataServiceImpl</servlet-name>
        <servlet-class>de.uni_potsdam.hpi.metanome.frontend.server.InputDataServiceImpl
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inputDataServiceImpl</servlet-name>
        <url-pattern>/metanome/inputDataService</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>de.uni_potsdam.hpi.metanome.frontend.server.DatabaseInitializer
        </listener-class>
    </listener>

</web-app>
