<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>deployment</artifactId>

    <parent>
        <groupId>de.metanome</groupId>
        <artifactId>metanome</artifactId>
        <version>1.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- the version of the metanome algorithms to include in packaging -->
        <algorithms.version>${project.version}</algorithms.version>
        <webappDirectory>${project.basedir}/target/${project.artifactId}-${project.version}
        </webappDirectory>
    </properties>
    <profiles>
        <profile>
            <id>deployment-local</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>2.8</version>
                    <executions>
                        <!-- Webapp-Runner Webserver -->
                        <execution>
                            <phase>package</phase>
                            <goals>
                                <goal>copy</goal>
                            </goals>
                            <configuration>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>com.github.jsimone</groupId>
                                        <artifactId>webapp-runner</artifactId>
                                        <version>8.5.5.0</version>
                                        <destFileName>webapp-runner.jar</destFileName>
                                    </artifactItem>
                                </artifactItems>
                            </configuration>
                        </execution>

                        <!-- Metanome Frontend -->
                        <execution>
                            <id>war</id>
                            <phase>package</phase>
                            <goals>
                                <goal>unpack</goal>
                            </goals>
                            <configuration>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>de.metanome</groupId>
                                        <artifactId>frontend</artifactId>
                                        <version>${project.version}</version>
                                        <type>war</type>
                                        <outputDirectory>target/frontend</outputDirectory>
                                    </artifactItem>
                                    <artifactItem>
                                        <groupId>de.metanome</groupId>
                                        <artifactId>backendwar</artifactId>
                                        <version>${project.version}</version>
                                        <type>war</type>
                                        <outputDirectory>target/backendwar</outputDirectory>
                                    </artifactItem>
                                </artifactItems>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.4</version>
                    <executions>
                    <execution>
                        <id>backend and frontend local</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>configs/local/assembly-local.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    </executions>
                </plugin>

            </plugins>
            </build>
        </profile>

    </profiles>
    <build>
    <plugins>
        <!-- To prevent creation of empty maven-jar file-->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-jar-plugin</artifactId>
            <version>2.4</version>
            <executions>
                <execution>
                    <id>default-jar</id>
                    <phase/>
                </execution>
            </executions>
        </plugin>
    </plugins>

    </build>

</project>
