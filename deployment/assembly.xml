<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>package_with_jetty</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/target/metanome/app</directory>
            <outputDirectory>/app</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>*.jar</exclude>
                <exclude>*.war</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/metanome/assets</directory>
            <outputDirectory>/assets</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>*.jar</exclude>
                <exclude>*.war</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/metanome/scripts</directory>
            <outputDirectory>/scripts</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>*.jar</exclude>
                <exclude>*.war</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/metanome/styles</directory>
            <outputDirectory>/styles</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>*.jar</exclude>
                <exclude>*.war</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/metanome/visualization</directory>
            <outputDirectory>/visualization</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>*.jar</exclude>
                <exclude>*.war</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/</directory>
            <outputDirectory>/</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>/WEB-INF/**</include>
            </includes>
            <excludes>
                <exclude>*.jar</exclude>
                <exclude>*.war</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/dependency/</directory>
            <outputDirectory>/</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>jetty-runner.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/dependency/algorithms/</directory>
            <outputDirectory>metanome/WEB-INF/classes/algorithms/</outputDirectory>
            <includes>
                <include>depminer_algorithm.jar</include>
                <include>fastfds_algorithm.jar</include>
                <include>fdep_algorithm.jar</include>
                <include>tane_algorithm.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/run.sh</source>
        </file>
        <file>
            <source>${project.basedir}/run.bat</source>
        </file>
        <file>
            <source>${project.basedir}/target/metanome/index.html</source>
        </file>
    </files>
</assembly>
