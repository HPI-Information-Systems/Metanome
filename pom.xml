<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.uni-potsdam.hpi</groupId>
    <artifactId>metanome</artifactId>
    <packaging>pom</packaging>
    <name>metanome</name>
    <version>0.0.2-SNAPSHOT</version>
    <description>The main metanome project</description>
    <url>https://github.com/HPI-Information-Systems/Metanome</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>jakob</id>
            <name>Jakob Zwiener</name>
            <email>jakob.zwiener@student.hpi.uni-potsdam.de</email>
        </developer>
        <developer>
            <id>claudia</id>
            <name>Claudia Exeler</name>
            <email>claudia.exeler@student.hpi.uni-potsdam.de</email>
        </developer>
        <developer>
            <id>tanja</id>
            <name>Tanja Bergmann</name>
            <email>tanja.bergmann@student.hpi.uni-potsdam.de</email>
        </developer>
    </developers>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <parent>
        <groupId>org.sonatype.oss</groupId>
        <artifactId>oss-parent</artifactId>
        <version>7</version>
    </parent>

    <scm>
        <connection>scm:git:git@github.com:HPI-Information-Systems/Metanome.git</connection>
        <developerConnection>scm:git:git@github.com:HPI-Information-Systems/Metanome.git
        </developerConnection>
        <url>https://github.com/HPI-Information-Systems/Metanome</url>
    </scm>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>cobertura-maven-plugin</artifactId>
                    <version>2.6</version>
                    <configuration>
                        <check/>
                        <formats>
                            <format>xml</format>
                        </formats>
                        <aggregate>true</aggregate>
                        <instrumentation>
                            <exclude>de/uni_potsdam/hpi/metanome/test_helper/**/*.class</exclude>
                        </instrumentation>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.1</version>
            </plugin>
            <plugin>
                <groupId>org.eluder.coveralls</groupId>
                <artifactId>coveralls-maven-plugin</artifactId>
                <version>2.2.0</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>cobertura</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>2.4</version>
            </extension>
        </extensions>
    </build>

    <modules>
        <module>algorithm_helper</module>
        <module>algorithm_integration</module>
        <module>algorithm_template_root</module>
        <module>backend</module>
        <module>frontend</module>
        <module>testing_algorithms</module>
        <module>test_helper</module>
    </modules>

    <profiles>
        <profile>
            <id>deployment</id>
            <modules>
                <module>deployment</module>
            </modules>
        </profile>
    </profiles>

</project>
